<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>BeverageStoreUI</display-name>

	<!-- Servlets -->

	<!-- JSPs -->
	<servlet>
		<servlet-name>BeveragesServlet</servlet-name>
		<jsp-file>main.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>BeveragesServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<display-name>SalesmanServlet</display-name>
		<servlet-name>SalesmanServlet</servlet-name>
		<servlet-class>de.uniba.dsg.dsam.client.SalesmanServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SalesmanServlet</servlet-name>
		<url-pattern>/SalesmanServlet</url-pattern>
	</servlet-mapping>

</web-app>
